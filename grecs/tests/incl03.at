AT_SETUP([Wildcard inclusion])
AT_KEYWORDS([include incl03])

AT_CHECK([
AT_DATA([i1.inc],[i1 included;
])

AT_DATA([i2.inc],[i2 included;
])

AT_DATA([i3.inc],[i3 included;
])

AT_DATA([test.cf],[before 1;
#include "i*.inc"
after 1;
])

gcffmt ./test.cf
],
[0],
[.before: "1"
.i1: "included"
.i2: "included"
.i3: "included"
.after: "1"
])

AT_CLEANUP
