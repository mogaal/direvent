AT_SETUP(Subtree - asterisk)
AT_KEYWORDS([peek peek07 glob glob04])

AT_DATA([test.cf],[text "string";
block {
	foo {
		quux 1;
	};
	bar 123;
	baz {
		quux 2;
	}
	crex {
		quux 3;
	}
}
])
   
AT_CHECK([gcfpeek -match -root=block test.cf '.*.quux'],
[0],
[.block.foo.quux: "1"
.block.baz.quux: "2"
.block.crex.quux: "3"
])

AT_CLEANUP
